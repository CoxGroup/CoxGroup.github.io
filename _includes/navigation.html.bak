<nav>
    <style>
        body {
            margin: 0; /* Remove default margin */
            padding: 0; /* Remove default padding */
        }
        nav {
            background-color: #448686; /* Change this to your desired color */
            padding: 5; /* No padding for the nav */
            display: flex; /* Ensures links are displayed in a row */
            justify-content: space-around; /* Adjusts space between links */
            align-items: center; /* Centers items vertically */
        }
        nav a {
            color: white; /* Link text color */
            text-decoration: none; /* Removes underline from links */
            padding: 5px; /* Adjusted space around the text */
            margin: 5px; /* Remove default margin */
            line-height: 1; /* Less vertical space */
        }
        nav a:hover {
            text-decoration: underline; /* Underlines the text on hover */
        }
        .current {
            border-bottom: 5px solid white; /* Highlights the current page */
            font-weight: bold;
        }
    </style>
    {% for item in site.data.navigation %}
      <a href="{{ item.link }}" {% if page.url == item.link %}class="current"{% endif %}>{{ item.name }}</a>
    {% endfor %}
</nav>
